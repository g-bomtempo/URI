package uberhub;
import java.util.Scanner;

public class uri1149 {

	public static void main(String[] args) {
		Scanner leitor = new Scanner(System.in);
		
		int A = leitor.nextInt();
		int soma = 0;
		int N = 0;
		
		while (true) {			
			
			if (N <= 0) {
				N = leitor.nextInt();
			} else {
				while (N != 0) {
					soma = soma + A;
					A++;
					N--;
				}
				System.out.println(soma);
				break;
			}
			
			
		}
		
		
	}

}
